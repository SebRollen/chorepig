<div aria-live="assertive" class="z-50 pointer-events-none fixed inset-0 flex items-end px-4 py-6 sm:items-start sm:p-6">
  <%= turbo_frame_tag "flash_messages", class: "w-full flex flex-col items-center space-y-4 sm:items-end" do %>
    <% flash.each do |type, data| %>
      <%= render FlashComponent.new(type: type, data: data) %>
    <% end %>
  <% end %>
</div>
